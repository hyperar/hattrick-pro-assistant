<Application x:Class="Hyperar.HPA.UserInterface.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Hyperar.HPA.UserInterface.ViewModels"
             xmlns:views="clr-namespace:Hyperar.HPA.UserInterface.Views"
             xmlns:local="clr-namespace:Hyperar.HPA.UserInterface">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/NavigationBar.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:MatchesViewModel}">
                <views:MatchesView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:PermissionsViewModel}">
                <views:PermissionsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:AboutViewModel}">
                <views:AboutView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:QuitViewModel}">
                <views:QuitView />
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
