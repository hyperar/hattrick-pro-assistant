<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Hyperar.HPA.UI.Converters">
    <converters:DeltaIntToSkillDeltaEnumConverter x:Key="deltaIntToSkillDeltaEnumConverter" />

    <!-- Global Styles -->
    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="{x:Type Image}">
        <Setter Property="Stretch" Value="None" />
    </Style>

    <Style TargetType="{x:Type Separator}">
        <Setter Property="Margin" Value="0 10" />
    </Style>

    <!-- Styles -->
    <Style x:Key="ViewTitle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="Margin" Value="0 5" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <Style x:Key="BlockTitle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Margin" Value="0 5" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <DropShadowEffect x:Key="ViewContainerShadow" BlurRadius="10" Color="Black" Opacity="0.4" />

    <Style x:Key="ViewContainer" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="25" />
        <Setter Property="Padding" Value="25" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="White" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="Effect" Value="{StaticResource ViewContainerShadow}" />
    </Style>

    <Style x:Key="SkillProgressBar" TargetType="{x:Type ProgressBar}">
        <Setter Property="Foreground" Value="#79A777" />
        <Setter Property="Margin" Value="2 3" />
    </Style>

    <Style x:Key="SkillBarTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="Margin" Value="4 3" />
    </Style>

    <Style x:Key="SkillValueTextBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="Margin" Value="3" />
    </Style>

    <Style x:Key="ColoredSkillProgressBar" TargetType="{x:Type ProgressBar}" BasedOn="{StaticResource SkillProgressBar}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="1">
                <Setter Property="Foreground" Value="#DD4140" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="2">
                <Setter Property="Foreground" Value="#DD4140" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="3">
                <Setter Property="Foreground" Value="#F5A104" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="4">
                <Setter Property="Foreground" Value="#F5A104" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="5">
                <Setter Property="Foreground" Value="#F1C40A" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="6">
                <Setter Property="Foreground" Value="#F1C40A" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="7">
                <Setter Property="Foreground" Value="#79A777" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Value}" Value="8">
                <Setter Property="Foreground" Value="#79A777" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>