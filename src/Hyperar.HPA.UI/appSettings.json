        },
        "TeamDetails": {
          "FileAndVersion": "?file=teamdetails&version=3.6",
          "Parameters": [ "teamId", "userId", "includeDomesticFlags", "includeFlags", "includeSupporters" ]
        },
        "WorldDetails": {
          "FileAndVersion": "?file=worlddetails&version=1.9",
          "Parameters": [ "countryId", "includeRegions", "leagueId" ]
        }
      }
    },
    "Scopes": {
      "ManageChallenges": "manage_challenges",
      "SetMatchorder": "set_matchorder",
      "ManageYouthPlayers": "manage_youthplayers",
