<UserControl x:Class="Hyperar.HPA.UI.Views.PlayersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:globalization="clr-namespace:Hyperar.HPA.Globalization;assembly=Hyperar.HPA.Globalization"
             xmlns:converters="clr-namespace:Hyperar.HPA.UI.Converters"
             xmlns:viewmodels="clr-namespace:Hyperar.HPA.UI.ViewModels"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             d:DataContext="{d:DesignInstance Type=viewmodels:PlayersViewModel}"
             d:DesignHeight="900"
             d:DesignWidth="1600"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BookingStatusToSmallBitmapImageConverter x:Key="bookingSmallStatusToBitmapImageConverter" />
        <converters:ByteArrayToBitmapImageConverter x:Key="byteArrayToBitmapImageConverter" />
        <converters:DateTimeToLocaleShortDateStringConverter x:Key="dateTimeToLocaleShortDateStringConverter" />
        <converters:DecimalAndCurrencyToCaltulatedTranslatedStringConverter x:Key="decimalAndCurrencyToCaltulatedTranslatedStringConverter" />
        <converters:EnumToIntConverter x:Key="enumToIntConverter" />
        <converters:EnumToTranslatedStringConverter x:Key="enumToTranslatedStringConverter" />
        <converters:HasMotherClubBonusToSmallBitmapImageConverter x:Key="hasMotherClubBonusToSmallBitmapImageConverter" />
        <converters:HealthIntToSmallBitmapImageConverter x:Key="healthIntToSmallBitmapImageConverter" />
        <converters:HealthIntToTranslatedStringConverter x:Key="healthIntToTranslatedStringConverter" />
        <converters:HealthIntToWeekStringConverter x:Key="healthIntToWeekStringConverter" />
        <converters:SpecialtyToSmallBitmapImageConverter x:Key="specialtyToSmallBitmapImageConverter" />
    </UserControl.Resources>
    <DockPanel>
        <DataGrid ItemsSource="{Binding SeniorPlayers, Mode=OneWay}"
                  AlternatingRowBackground="#eeeeee"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  HorizontalScrollBarVisibility="Auto"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  VerticalScrollBarVisibility="Auto"
                  VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                  VirtualizingStackPanel.IsVirtualizing="true"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static globalization:Strings.ID}"
                                    Binding="{Binding Id, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Name}"
                                    Binding="{Binding FirstName, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Nickname}"
                                    Binding="{Binding NickName, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Lastname}"
                                    Binding="{Binding LastName, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.ShirtNumber}"
                                    Binding="{Binding ShirtNumber, Mode=OneWay}" />
                <DataGridTemplateColumn Header="{x:Static globalization:Strings.Age}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{x:Static globalization:Strings.AgeMask}">
                                        <Binding Path="AgeYears" />
                                        <Binding Path="AgeDays" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="{x:Static globalization:Strings.TotalSkillIndex}"
                                    Binding="{Binding TotalSkillIndex, Mode=OneWay, StringFormat={}{0:N0}}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style>
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style>
                            <Setter Property="TextBlock.HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="{x:Static globalization:Strings.Country}"
                                        SortMemberPath="CountryName">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image ToolTip="{Binding CountryName}"
                                   Source="{Binding LeagueFlag,
                                                    FallbackValue={StaticResource transparent},
                                                    TargetNullValue={StaticResource transparent},
                                                    Converter={StaticResource byteArrayToBitmapImageConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="{x:Static globalization:Strings.MotherclubBonus}"
                                        SortMemberPath="HasMotherClubBonus">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding HasMotherClubBonus,
                                                    FallbackValue={StaticResource transparent},
                                                    TargetNullValue={StaticResource transparent},
                                                    Converter={StaticResource hasMotherClubBonusToSmallBitmapImageConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="{x:Static globalization:Strings.Salary}"
                                        SortMemberPath="Salary">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource decimalAndCurrencyToCaltulatedTranslatedStringConverter}">
                                        <Binding Path="Salary" />
                                        <Binding Path="DataContext.Currency.Rate"
                                                 RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                                        <Binding Path="DataContext.Currency.Name"
                                                 RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="{x:Static globalization:Strings.Specialty}"
                                        SortMemberPath="Specialty">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image ToolTip="{Binding Specialty,
                                                     Converter={StaticResource enumToTranslatedStringConverter}}"
                                           Source="{Binding Specialty,
                                                            FallbackValue={StaticResource transparent},
                                                            TargetNullValue={StaticResource transparent},
                                                            Converter={StaticResource specialtyToSmallBitmapImageConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="{x:Static globalization:Strings.Agreeability}"
                                    Binding="{Binding Agreeability,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Aggressiveness}"
                                    Binding="{Binding Aggressiveness,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Honesty}"
                                    Binding="{Binding Honesty,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Leadership}"
                                    Binding="{Binding Leadership,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTemplateColumn Header="{x:Static globalization:Strings.Bookings}"
                                        SortMemberPath="Bookings">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image ToolTip="{Binding BookingStatus,
                                                     Converter={StaticResource enumToTranslatedStringConverter}}"
                                   Source="{Binding BookingStatus,
                                                    FallbackValue={StaticResource transparent},
                                                    TargetNullValue={StaticResource transparent},
                                                    Converter={StaticResource bookingSmallStatusToBitmapImageConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="{x:Static globalization:Strings.Health}"
                                        SortMemberPath="Health">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center"
                                        Orientation="Horizontal"
                                        ToolTip="{Binding Health,
                                                          FallbackValue={StaticResource transparent},
                                                          TargetNullValue={StaticResource transparent},
                                                          Converter={StaticResource healthIntToTranslatedStringConverter}}">
                                <Image Source="{Binding Health,
                                                        FallbackValue={StaticResource transparent},
                                                        TargetNullValue={StaticResource transparent},
                                                        Converter={StaticResource healthIntToSmallBitmapImageConverter}}" />
                                <TextBlock Text="{Binding Health,
                                                          Converter={StaticResource healthIntToWeekStringConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="{x:Static globalization:Strings.Loyalty}"
                                    Binding="{Binding Loyalty,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Form}"
                                    Binding="{Binding Form,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Stamina}"
                                    Binding="{Binding Stamina,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Keeper}"
                                    Binding="{Binding Keeper,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Defending}"
                                    Binding="{Binding Defending,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Playmaking}"
                                    Binding="{Binding Playmaking,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Winger}"
                                    Binding="{Binding Winger,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Passing}"
                                    Binding="{Binding Passing,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Scoring}"
                                    Binding="{Binding Scoring,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.SetPieces}"
                                    Binding="{Binding SetPieces,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.Experience}"
                                    Binding="{Binding Experience,
                                                      Mode=OneWay,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.LeagueGoals}" Binding="{Binding SeasonLeagueGoals, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.CupGoals}" Binding="{Binding SeasonCupGoals, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.FriendlyGoals}" Binding="{Binding SeasonFriendlyGoals, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.CareerGoals}" Binding="{Binding CareerLeagueGoals, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.CareerHattricks}" Binding="{Binding CareerHattricks, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.GoalsOnTeam}" Binding="{Binding TeamGoals, Mode=OneWay}" />
                <DataGridTextColumn Header="{x:Static globalization:Strings.MatchesOnTeam}" Binding="{Binding TeamMatches, Mode=OneWay}" />
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <StackPanel Margin="10"
                                Orientation="Horizontal">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition MinWidth="150" Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition MinWidth="150" Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Row 0 -->
                            <TextBlock Grid.Column="0"
                                       Grid.Row="0"
                                       Grid.ColumnSpan="6"
                                       FontSize="24"
                                       Text="{Binding Title}" />
                            <!-- Row 1 -->
                            <StackPanel Grid.Column="0"
                                        Grid.Row="1"
                                        Grid.ColumnSpan="6"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <Image Margin="2"
                                       ToolTip="{Binding CountryName}"
                                       Source="{Binding LeagueFlag,
                                                        FallbackValue={StaticResource transparent},
                                                        TargetNullValue={StaticResource transparent},
                                                        Converter={StaticResource byteArrayToBitmapImageConverter}}" />

                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{x:Static globalization:Strings.AgeAndNextBirthDayMask}">
                                            <Binding Path="AgeYears" />
                                            <Binding Path="AgeDays" />
                                            <Binding Path="NextBirthDay" Converter="{StaticResource dateTimeToLocaleShortDateStringConverter}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>

                            <!-- Row 2 -->
                            <Image Grid.Column="0"
                                   Grid.Row="2"
                                   Grid.RowSpan="7"
                                   Source="{Binding Avatar,
                                                    FallbackValue={StaticResource transparent},
                                                    TargetNullValue={StaticResource transparent},
                                                    Converter={StaticResource byteArrayToBitmapImageConverter}}" />

                            <TextBlock Grid.Column="1"
                                       Grid.Row="2"
                                       Grid.ColumnSpan="5">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{x:Static globalization:Strings.PlayerDetailDescription}">
                                        <Binding Path="Agreeability" Converter="{StaticResource enumToTranslatedStringConverter}" />
                                        <Binding Path="Aggressiveness" Converter="{StaticResource enumToTranslatedStringConverter}" />
                                        <Binding Path="Honesty" Converter="{StaticResource enumToTranslatedStringConverter}" />
                                        <Binding Path="Experience" Converter="{StaticResource enumToTranslatedStringConverter}" />
                                        <Binding Path="Leadership" Converter="{StaticResource enumToTranslatedStringConverter}" />
                                        <Binding Path="Loyalty" Converter="{StaticResource enumToTranslatedStringConverter}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <!-- Row 3 -->
                            <TextBlock Grid.Column="1"
                                       Grid.Row="3"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.TotalSkillIndex}" />

                            <TextBlock Grid.Column="2"
                                       Grid.Row="3"
                                       Style="{StaticResource ValueTextBlock}"
                                       Text="{Binding TotalSkillIndex, Mode=OneWay, StringFormat={}{0:N0}}" />

                            <TextBlock Grid.Column="3"
                                       Grid.Row="3"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Keeper}" />

                            <ProgressBar Grid.Column="4"
                                         Grid.Row="3"
                                         Maximum="20"
                                         Style="{StaticResource SkillProgressBar}"
                                         Value="{Binding Keeper,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="4"
                                       Grid.Row="3"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Keeper,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="5"
                                       Grid.Row="3"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Keeper,
                                                      Converter={StaticResource enumToIntConverter}}" />

                            <!-- Row 4 -->
                            <TextBlock Grid.Column="1"
                                       Grid.Row="4"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Salary}" />

                            <TextBlock Grid.Column="2"
                                       Grid.Row="4">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource decimalAndCurrencyToCaltulatedTranslatedStringConverter}">
                                        <Binding Path="Salary" />
                                        <Binding Path="DataContext.Currency.Rate"
                                                     RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                                        <Binding Path="DataContext.Currency.Name"
                                                     RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=UserControl}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <TextBlock Grid.Column="3"
                                       Grid.Row="4"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Defending}" />

                            <ProgressBar Grid.Column="4"
                                         Grid.Row="4"
                                         Maximum="20"
                                         Style="{StaticResource SkillProgressBar}"
                                         Value="{Binding Defending,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="4"
                                       Grid.Row="4"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Defending,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="5"
                                       Grid.Row="4"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Defending,
                                                      Converter={StaticResource enumToIntConverter}}" />

                            <!-- Row 5 -->
                            <TextBlock Grid.Column="1"
                                       Grid.Row="5"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Specialty}" />

                            <StackPanel Grid.Column="2"
                                        Grid.Row="5"
                                        Orientation="Horizontal">
                                <Image ToolTip="{Binding Specialty,
                                                         Converter={StaticResource enumToTranslatedStringConverter}}"
                                           Source="{Binding Specialty,
                                                            FallbackValue={StaticResource transparent},
                                                            TargetNullValue={StaticResource transparent},
                                                            Converter={StaticResource specialtyToSmallBitmapImageConverter}}" />

                                <TextBlock Style="{StaticResource ValueTextBlock}"
                                           Text="{Binding Specialty,
                                                  Converter={StaticResource enumToTranslatedStringConverter}}" />
                            </StackPanel>

                            <TextBlock Grid.Column="3"
                                       Grid.Row="5"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Playmaking}" />

                            <ProgressBar Grid.Column="4"
                                         Grid.Row="5"
                                         Maximum="20"
                                         Style="{StaticResource SkillProgressBar}"
                                         Value="{Binding Playmaking,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="4"
                                       Grid.Row="5"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Playmaking,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="5"
                                       Grid.Row="5"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Playmaking,
                                                      Converter={StaticResource enumToIntConverter}}" />

                            <!-- Row 6 -->
                            <TextBlock Grid.Column="1"
                                       Grid.Row="6"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Form}" />

                            <ProgressBar Grid.Column="2"
                                         Grid.Row="6"
                                         Maximum="8"
                                         Style="{DynamicResource ColoredSkillProgressBar}"
                                         Value="{Binding Form,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="2"
                                       Grid.Row="6"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Form,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="3"
                                       Grid.Row="6"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Winger}" />

                            <ProgressBar Grid.Column="4"
                                         Grid.Row="6"
                                         Maximum="20"
                                         Style="{StaticResource SkillProgressBar}"
                                         Value="{Binding Winger,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="4"
                                       Grid.Row="6"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Winger,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="5"
                                       Grid.Row="6"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Winger,
                                                      Converter={StaticResource enumToIntConverter}}" />

                            <!-- Row 7 -->
                            <TextBlock Grid.Column="1"
                                           Grid.Row="7"
                                           Style="{StaticResource LabelTextBlock}"
                                           Text="{x:Static globalization:Strings.Stamina}" />

                            <ProgressBar Grid.Column="2"
                                         Grid.Row="7"
                                         Maximum="9"
                                         Style="{DynamicResource ColoredSkillProgressBar}"
                                         Value="{Binding Stamina,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="2"
                                       Grid.Row="7"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Stamina,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="3"
                                       Grid.Row="7"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Passing}" />

                            <ProgressBar Grid.Column="4"
                                         Grid.Row="7"
                                         Maximum="20"
                                         Style="{StaticResource SkillProgressBar}"
                                         Value="{Binding Passing,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="4"
                                       Grid.Row="7"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Passing,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="5"
                                       Grid.Row="7"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Passing,
                                                      Converter={StaticResource enumToIntConverter}}" />

                            <!-- Row 8 -->
                            <TextBlock Grid.Column="3"
                                       Grid.Row="8"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.Scoring}" />

                            <ProgressBar Grid.Column="4"
                                         Grid.Row="8"
                                         Maximum="20"
                                         Style="{StaticResource SkillProgressBar}"
                                         Value="{Binding Scoring,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="4"
                                       Grid.Row="8"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Scoring,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="5"
                                       Grid.Row="8"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding Scoring,
                                                      Converter={StaticResource enumToIntConverter}}" />

                            <!-- Row 9 -->
                            <TextBlock Grid.Column="3"
                                       Grid.Row="9"
                                       Style="{StaticResource LabelTextBlock}"
                                       Text="{x:Static globalization:Strings.SetPieces}" />

                            <ProgressBar Grid.Column="4"
                                         Grid.Row="9"
                                         Maximum="20"
                                         Style="{StaticResource SkillProgressBar}"
                                         Value="{Binding SetPieces,
                                                         Converter={StaticResource enumToIntConverter}}" />

                            <TextBlock Grid.Column="4"
                                       Grid.Row="9"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding SetPieces,
                                                      Converter={StaticResource enumToTranslatedStringConverter}}" />

                            <TextBlock Grid.Column="5"
                                       Grid.Row="9"
                                       Style="{StaticResource SkillBarTextBlock}"
                                       Text="{Binding SetPieces,
                                                      Converter={StaticResource enumToIntConverter}}" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </DockPanel>
</UserControl>